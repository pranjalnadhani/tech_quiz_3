<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>

  <% if !(devise_error_messages!).empty? %>
    <div class="alert alert-error">
      <button class="close" data-dismiss="alert">x</button>
      <%= devise_error_messages! %>
    </div>
  <% end %>

<div class="container-fluid">
<div class="row-fluid">
<div class="span2"></div>
<div class="well span8">
  <fieldset>

    <div id="legend">
      <legend class="">Sign up</legend>
    </div>

    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :email, :placeholder => "Enter your email..." %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password %>
        <p class="help-inline">Should be atleast 6 characters long...</p>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
        <p class="help-inline">Retype your password...</p>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </fieldset>
</div>
<div class="span2"></div>
</div>
</div>
<% end %>

<div class="form-actions">
  <div class="span3"></div>
    <%= render "devise/shared/links" %>
  <div class="span3"></div>
</div>
